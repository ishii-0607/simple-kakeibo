<div class="container">
  <div class="row">
  <h2 class="mt-5">マイページ編集</h2>
    <div class="col-md-12">
      <%= form_with model: @user, url: user_path, method: :patch, local:true do |f| %>
        <div class="field row mt-5">
          <%= f.label "氏名", class: "mr-5" %>
          <%= f.text_field :name, autofocus: true, class: "ml-5 mb-5" %>
        </div>
        <div class="field row mb-5">
          <%= f.label "メールアドレス", class: "mr-3" %>
          <%= f.email_field :email %>
        </div>
        <div class="actions row">
          <%= f.submit "更新する", class: "btn btn-success mr-5" %>
          <%= link_to "戻る", user_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
