<div class="container">
  <h2 class="mt-5 mb-5">マイページ</h2>
  <div class="row">
    <div class="col-md-5">
      <table class="table table-borderless">
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <%= link_to "編集する", edit_user_path, class: "btn btn-success mr-5" %>
      <%= link_to "ホームに戻る", root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
