<div class="container">
  <div class="row">
    <h2>固定費科目の詳細</h2>
    <div class="col-md-12">
      <table>
        <tr>
          <th>日付</th>
          <td><%= @fixedcost.year_month %></td>
        </tr>
        <tr>
          <th>名称</th>
          <td><%= @fixedcost.name %></td>
        </tr>
        <tr>
          <th>金額</th>
          <td><%= @fixedcost.value %></td>
        </tr>
        <tr>
          <th>備考</th>
          <td><%= @fixedcost.description %></td>
        </tr>
      </table>
      <%= link_to "編集する", edit_fixedcost_path %>
      <%= link_to "収入科目一覧に戻る", fixedcosts_path %>
    </div>
  </div>
</div>
