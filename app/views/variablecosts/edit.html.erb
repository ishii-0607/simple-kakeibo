<div class="container">
  <div class="row">
    <h2>変動費科目編集</h2>
    <div class="col-md-12">
      <%= form_with model: @variablecost, local:true do |f| %>
      <table>
        <tr>
          <th><%= f.label :year_month, "日付" %></th>
          <td><%= f.date_select :year_month %></td>
        </tr>
        <tr>
          <th><%= f.label :name, "名称" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :value, "金額" %></th>
          <td><%= f.text_field :value %></td>
        </tr>
        <tr>
          <th><%= f.label :description, "説明" %></th>
          <td><%= f.text_field :description %></td>
        </tr>
      </table>
      <%= f.submit "登録する", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "変動費科目一覧に戻る", variablecosts_path %>
    </div>
  </div>
</div>
